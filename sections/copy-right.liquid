{%- if section.settings.enable_country_selector -%}
  <script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- include 'section_style' -%}

{%- capture copyright_style -%}
  --st-cl: {{ section.settings.color_copyright }};
  --st-cl-l: {{ section.settings.color_copyright_link }};
{%- endcapture -%}

<div class="copy-right vela-section{% if section.settings.full_with and section.settings.max_with %} mx-auto{% endif %}" style="{{- section_style -}}{{- copyright_style -}}">
  <div class="container{% if section.settings.full_with %}-fluid{% endif %}">
    <div class="copy-right__inner">
      <div class="d-flex flex-wrap flex-column flex-lg-row align-items-center justify-content-between">

        {%- if section.settings.payment_enable -%}
          <div class="payment">
            {%- if section.settings.payment_image != blank -%}
              <img 
                srcset="{{ section.settings.payment_image | image_url: width: section.settings.payment_image.width }} 1x, {{ section.settings.payment_image | image_url: width: section.settings.payment_image.width, scale: 2 }} 2x"
                src="{{ section.settings.payment_image | image_url: width: section.settings.payment_image.width }}"
                width="{{ section.settings.payment_image.width }}" 
                height="{{ section.settings.payment_image.height }}"
                loading="lazy"
                class="img-fluid"
                alt="{{ section.settings.payment_image.alt | default: shop.name | escape }}">
            {%- else -%}
              <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
              <ul class="list list-payment list-unstyled m-0 d-flex flex-wrap" role="list">
                {%- for type in shop.enabled_payment_types -%}
                  <li class="list-payment__item py-1{% unless forloop.last %} me-2{% endunless%}">
                    {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.copyright != blank -%}
          <div class="copyright mt-2 mt-lg-0">
            {{ section.settings.copyright }}
          </div>
        {%- endif -%}

        {%- if section.settings.social_enable -%}
          <div class="footer-social mt-2 mt-lg-0">
            {%- render 'social-link', position: "bottom" -%}
          </div>
        {%- endif -%}

        {%- if section.settings.enable_country_selector -%}
          <div class="footer-locatization d-none d-lg-flex mt-2 mt-lg-0">
            {%- render 'localization', position: "bottom" -%}
          </div>
        {%- endif -%}

      </div>
    </div>
  </div>
</div>

