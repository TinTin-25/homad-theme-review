{%- include 'section_style' -%}
<div class="vela-section google-map1 overflow-hidden{% if section.settings.full_with and section.settings.max_with %} mx-auto{% endif %}" style="{{- section_style -}}">
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="vela-section__inner row g-4">
            <div class="col-12 col-lg-6">
                {%- if section.settings.heading != blank -%}
                <h3 class="mb-4 pb-md-2 d-flex align-items-center"><svg class="me-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3.01001 11.22V15.71C3.01001 20.2 4.81001 22 9.30001 22H14.69C19.18 22 20.98 20.2 20.98 15.71V11.22" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M12 12C13.83 12 15.18 10.51 15 8.68L14.34 2H9.66999L8.99999 8.68C8.81999 10.51 10.17 12 12 12Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M18.31 12C20.33 12 21.81 10.36 21.61 8.35L21.33 5.6C20.97 3 19.97 2 17.35 2H14.3L15 9.01C15.17 10.66 16.66 12 18.31 12Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M5.64 12C7.29 12 8.78 10.66 8.94 9.01L9.16 6.8L9.64001 2H6.59C3.97001 2 2.97 3 2.61 5.6L2.34 8.35C2.14 10.36 3.62 12 5.64 12Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M12 17C10.33 17 9.5 17.83 9.5 19.5V22H14.5V19.5C14.5 17.83 13.67 17 12 17Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    {{- section.settings.heading -}}
                </h3>
                {%- endif -%}
                {%- if section.settings.location_name != blank -%}
                    <div class="d-flex align-items mb-3 pb-md-2">
                        <h4 class="mb-0 me-1">{{ section.settings.location_name }} </h4><span class="fs-13 fw-medium text-secondary">({{ section.blocks.size }} stores)</span>
                    </div>
                {%- endif -%}
                <ul class="nav list-unstyled mb-0 row g-4 row-cols-2 row-cols-lg-3">
                    {%- for block in section.blocks -%}
                        <li class="nav-item product-tabs__nav-item col">
                            <a class="tabs__nav-link{% if forloop.first %} active{% endif %}" href="#map__{{ section.id }}__{{ forloop.index }}" data-bs-toggle="tab">
                                {%- if block.settings.store_title != blank -%}
                                    <div class="store__title heading-color fs-6 fw-medium mb-2">
                                        {{ block.settings.store_title }}
                                    </div>
                                {%- endif -%}
                                {%- if block.settings.store_add != blank -%}
                                    <div class="store__address text-secondary fs-13 mb-2">
                                        {{ block.settings.store_add }}
                                    </div>
                                {%- endif -%}
                                {%- if block.settings.store_phone != blank -%}
                                    <div class="store__phone fs-13 medium mb-2">
                                        {{ block.settings.store_phone }}
                                    </div>
                                {%- endif -%}
                                {%- if block.settings.store_email != blank -%}
                                    <div class="store__email fs-13 medium">
                                        {{ block.settings.store_email }}
                                    </div>
                                {%- endif -%}
                                {%- if block.settings.store_time != blank -%}
                                    <div class="store__time fs-13 medium mt-2">
                                        {{ block.settings.store_time }}
                                    </div>
                                {%- endif -%}
                            </a>
                        </li>
                    {%- endfor-%}
                </ul>
            </div>
            <div class="tab-content col-12 col-lg-6">
                {%- for block in section.blocks -%}
                    <div  class=" tab-pane fade{% if forloop.first %} show active{% endif %}" id="map__{{ section.id }}__{{ forloop.index }}" tabindex="0" style="{% if section.settings.min-height != blank %}--gm-h: {{ section.settings.min-height }};{% endif %}{% if section.settings.min-height-m != blank %}--gm-h-m: {{ section.settings.min-height-m }};{% endif %}">
                        <div class="google-map__map d-flex w-100 overflow-hidden rounded-3">
                            {{ block.settings.googlemap_iframe }}
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Google map 1",
        "class": "velaFramework",
        "tag": "section",
        "settings":[
            {
                "type": "header",
                "content": "t:sections.global.settings.header_section.content"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "t:sections.global.settings.full_width.label"
            },
            {
                "type": "text",
                "id": "max_with",
                "label": "t:sections.global.settings.max_with.label",
                "info": "t:sections.global.settings.max_with.info"
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "t:sections.global.settings.bg_color.label",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "t:sections.global.settings.padding.label",
                "placeholder": "0px 0px",
                "info": "t:sections.global.settings.padding.info"
            },
            {
                "type": "text",
                "id": "padding_block_m",
                "label": "t:sections.global.settings.padding_mobile.label",
                "placeholder": "0px 0px",
                "info": "t:sections.global.settings.padding_mobile.info"
            },
            {
                "type": "text",
                "id": "margin_block",
                "label": "t:sections.global.settings.margin.label",
                "placeholder": "0px 0px"
            },
            {
                "type": "header",
                "content": "t:sections.global.settings.header_settings.content"
            },
            {
                "type": "html",
                "id": "heading",
                "label": "t:sections.global.settings.heading_section.label",
                "default": "Heading"
            },
            {
                "type": "html",
                "id": "location_name",
                "label": "Location"
            },
            {
                "type": "header",
                "content": "Map"
            },
            {
                "type": "text",
                "id": "min-height",
                "label": "Height on desktop(px)",
                "placeholder": "450px",
                "default": "450px"
            },
            {
                "type": "text",
                "id": "min-height-m",
                "label": "Height on mobile(px)",
                "placeholder": "300px",
                "default": "300px"
            }
        ],
        "blocks": [
            {
                "type": "store_info",
                "name": "Store info",
                "settings": [
                    {
                        "type": "header",
                        "content": "Map"
                    },
                    {
                        "type": "textarea",
                        "id": "googlemap_iframe",
                        "label": "Google Map Code",
                        "placeholder": "Embed Map",
                        "default": "<iframe src=\"https:\/\/www.google.com\/maps\/embed?pb=!1m14!1m8!1m3!1d19867.311686031117!2d-0.111056!3d51.505621!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x4291f3172409ea92!2slastminute.com%20London%20Eye!5e0!3m2!1sen!2sus!4v1631783144736!5m2!1sen!2sus\" width=\"100%\" height=\"600px\" style=\"border:0;\" allowfullscreen=\"\" loading=\"lazy\"><\/iframe>"
                    },
                    {
                        "type": "header",
                        "content": "Store info"
                    },
                    {
                        "type": "text",
                        "id": "store_title",
                        "label": "Store name",
                        "default": "Av Prsdnt Kennedy"
                    },
                    {
                        "type": "html",
                        "id": "store_add",
                        "label": "Adress",
                        "default": "2118 Thornridge Cir. Syracuse, Connecticut 35624"
                    },
                    {
                        "type": "html",
                        "id": "store_phone",
                        "label": "Phone",
                        "default": "(316) 555-0116"
                    },
                    {
                        "type": "html",
                        "id": "store_email",
                        "label": "Email",
                        "default": "jennings@example.com"
                    },
                    {
                        "type": "html",
                        "id": "store_time",
                        "label": "Time"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Google map 1",
                "blocks": [
                    {
                        "type": "store_info"
                    },
                    {
                        "type": "store_info"
                    },
                    {
                        "type": "store_info"
                    }
                ]
            }
        ]
    }
{% endschema %}