{{- 'multi-image-with-text.css' | asset_url | stylesheet_tag -}}
{%- include 'section_style' -%}
{%- include 'carousel-settings' -%}
<div class="vela-section multi-image-with-text overflow-hidden{% if section.settings.layout == 'carousel' and section.settings.slide_variableWidth %} slick-carousel__variableWidth{% endif %}{% if section.settings.full_with and section.settings.max_with %} mx-auto{% endif %}" style="{{- section_style -}}">
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="vela-section__inner">
            {%- if section.settings.heading != blank -%}
                <div class="heading-group mb-3 mb-md-4 pb-1 {{ section.settings.text_align }}">
                    <h2 class="heading mb-0">
                        <span>{{ section.settings.heading }}</span>
                    </h2>
                    {%- if section.settings.sub_heading != blank -%}
                        <div class="sub-heading pt-1">
                            {{ section.settings.sub_heading }}
                        </div>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="vela-section__content">
                <div
                {% if section.settings.layout == 'carousel' %}
                    class="js-carousel slick-carousel carousel-custom row g-ct"
                    data-nav="{{ nav }}"
                    data-dots="{{ pagination }}"
                    data-infinite="{{ infinite }}"
                    data-autoplay="{{ autoplay }}"
                    data-variableWidth="{{ variableWidth }}"
                    data-autoplayspeed="{{ autoplay_speed }}"
                    data-columnone="{{ owlColumn1 }}" 
                    data-columntwo="{{ owlColumn2 }}" 
                    data-columnthree="{{ owlColumn3 }}" style="--gutter-md-x: {{ section.settings.space_between }}px;--gutter-md-y: {{ section.settings.space_between }}px;--gutter-x: {{ section.settings.space_between_m }}px;--gutter-y: {{ section.settings.space_between_m }}px"
                {% else %}
                    class="row g-ct grid-column" style="--gutter-md-x: {{ section.settings.space_between }}px;--gutter-md-y: {{ section.settings.space_between }}px;--gutter-x: {{ section.settings.space_between_m }}px;--gutter-y: {{ section.settings.space_between_m }}px"
                {% endif %}
                >
                    {% for block in section.blocks %} 
                        <div 
                            {% if section.settings.layout == 'carousel' %}
                                class="slick-carousel__item grid-column"
                            {% else %}
                                class="col-12 multi-image-with-text__col" style="--col-dt: {% if block.settings.width_desk == 33 %}33.33{% else %}{{ block.settings.width_desk }}{% endif %}%; --col-tl: {{ block.settings.width_tablet }}%; --col-mb: {{ block.settings.width_mobile }}%;"
                            {% endif %}
                        >  
                            
                            <div class="multi-image-with-text__wrapper text_{{ block.settings.banner_position }}{% if section.settings.effect_show %} effectSix{% endif %} {% if section.settings.slide_variableWidth %} box-width{% endif %}" style="--miwt-ct-bg-cl: {{ block.settings.content_bg_color}};{%- if block.settings.item_padding != blank -%}--miwt-ct-p:{{- block.settings.item_padding -}};{%- endif -%}{%- if block.settings.item_padding_m != blank -%}--miwt-ct-p-m:{{- block.settings.item_padding_m -}}{%- endif -%}">
                                <div class="multi-image-with-text__image overflow-hidden rounded-2" style="--plh-svg-h: 410px;">
                                    {%- if block.settings.button_url != blank -%}
                                        <a href="{{ block.settings.button_url }}" title="{{ block.settings.banner.alt | default: shop.name }}">
                                    {%- endif -%}
                                            {%- if block.settings.banner != blank -%}
                                                {% render 'img-global', image: block.settings.banner, image_style: true %}
                                            {%- else -%}
                                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                            {%- endif -%}
                                    {%- if block.settings.button_url != blank -%}
                                        </a>
                                    {%- endif -%}
                                </div>
                                {%- if block.settings.button != blank or block.settings.title != blank or block.settings.content != blank -%} 
                                    <a class="multi-image-with-text__content-content  {{ block.settings.text_align }}" href="{{ block.settings.button_url }}">
                                        <div class="multi-image-with-text__content-wrapper w-100">
                                            {%- if  block.settings.subtitle != blank -%}
                                                {%- capture miwt_sh -%}
                                                    --vl-t-cl:{{ block.settings.heading_subcolor }}; --vl-t-fs: {{ block.settings.heading_sub_size }}px; --vl-t-fs-m: {{ block.settings.heading_sub_size_m }}px;
                                                    {%- if block.settings.heading_sub_margin != blank -%}
                                                        --vl-t-mg:{{ block.settings.heading_sub_margin }};
                                                    {%- endif -%}
                                                    {%- if block.settings.heading_sub_margin_m != blank -%}
                                                        --vl-t-mg-m:{{ block.settings.heading_sub_margin_m }};
                                                    {%- endif -%}
                                                {%- endcapture -%}
                                                <div class="multi-image-with-text__sub-title lh-1 vela-text" style="{{- miwt_sh -}}">{{ block.settings.subtitle }}</div>
                                            {%- endif -%}
                                            {%- if  block.settings.title != blank -%}
                                                {%- capture miwt_h -%}
                                                    --vl-t-cl:{{ block.settings.heading_color }}; --vl-t-fs: {{ block.settings.heading_size }}px; --vl-t-fs-m: {{ block.settings.heading_size_m }}px;
                                                    {%- if block.settings.heading_margin != blank -%}
                                                        --vl-t-mg:{{ block.settings.heading_margin }};
                                                    {%- endif -%}
                                                    {%- if block.settings.heading_margin_m != blank -%}
                                                        --vl-t-mg-m:{{ block.settings.heading_margin_m }};
                                                    {%- endif -%}
                                                {%- endcapture -%}
                                                <div class="multi-image-with-text__title vela-text h3" style="{{- miwt_h -}}">
                                                    <span>{{ block.settings.title }}</span>
                                                </div>
                                            {%- endif -%}
                                            {%- if  block.settings.content != blank -%}
                                                {%- capture miwt_desc -%}
                                                    --vl-t-cl:{{ block.settings.text_color }}; --vl-t-fs: {{ block.settings.text_size }}px; --vl-t-fs-m: {{ block.settings.text_size_m }}px;
                                                    {%- if block.settings.text_margin != blank -%}
                                                        --vl-t-mg:{{ block.settings.text_margin }};
                                                    {%- endif -%}
                                                    {%- if block.settings.text_margin_m != blank -%}
                                                        --vl-t-mg-m:{{ block.settings.text_margin_m }};
                                                    {%- endif -%}
                                                {%- endcapture -%}
                                                <div class="multi-image-with-text__desc vela-text" style="{{- miwt_desc -}}">{{ block.settings.content }}</div>
                                            {%- endif -%}
                                            {%- if  block.settings.button != blank -%}
                                                {%- capture btn_style -%}
                                                    --vl-b-cl:{{ block.settings.button_color }};--vl-b-bd-w: {{ block.settings.button_width }};--vl-b-bd-cl: {{ block.settings.button_border_color }};--vl-b-bd-cl-h: {{ block.settings.button_border_color }};--vl-b-bg-cl: {{ block.settings.button_bg_color }};--vl-b-cl-h:{{ block.settings.button_color }};--vl-b-bg-cl-h: {{ block.settings.button_bg_color }};--vl-b-fs: {{ block.settings.button_size }}px;--vl-b-fs-m: {{ block.settings.button_size_m }}px;
                                                    {%- if block.settings.button_padding != blank -%}
                                                    --vl-b-pd: {{ block.settings.button_padding }};
                                                    {%- endif -%}
                                                    {%- if block.settings.button_padding_m != blank -%}
                                                    --vl-b-pd-m: {{ block.settings.button_padding_m }};
                                                    {%- endif -%}
                                                {%- endcapture -%}
                                                <span class="mt-1 multi-image-with-text__btn vela-btn d-inline-block {{  block.settings.border_radius }}{% if block.settings.button_width == '0' %} btn__special-style d-inline-block{% endif %}" style="{{- btn_style -}}">{{ block.settings.button }}</span>                                                   
                                            {%- endif -%}
                                        </div>
                                    </a>
                                {%- endif -%}
                            </div>
                        </div>
                    {% endfor %}
                    
                </div>
            </div>
        </div>
    </div>
</div>

