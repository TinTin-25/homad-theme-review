{%- if section.settings.layout == 'masonry' -%}
    <script src="{{ 'jquery.masonry.min.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
{{- 'gallery.css' | asset_url | stylesheet_tag -}}
{%- include 'carousel-settings'-%}
{%- include 'section_style' -%}
{%- if section.settings.crop -%}
    {%- assign image_crop = 'center' -%}
{%- endif -%}

<div class="gallery vela-section overflow-hidden{% if section.settings.full_with and section.settings.max_with %} mx-auto{% endif %}" style="{{- section_style -}}">
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="vela-section__inner">
            {%- if section.settings.heading != blank -%}
                <div class="heading-group mb-3 mb-md-4 pb-1 {{ section.settings.text_align }}">
                    <h2 class="heading mb-0">
                        <span>{{ section.settings.heading }}</span>
                    </h2>
                    {%- if section.settings.sub_heading != blank -%}
                        <div class="sub-heading pt-1">
                            {{ section.settings.sub_heading }}
                        </div>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="vela-section__content{% if section.settings.popup %} gallery-image{% endif %}">
                {%- capture bg-color-overlay -%}
                    {%- assign opacity = section.settings.opacity | times: 0.01 -%}
                    {%- assign overlay = section.settings.content_color_bg | color_modify: 'alpha', opacity -%}
                    --bg-cl-ol: {{ overlay }};
                {%- endcapture -%}
                <div 
                    {% if section.settings.layout == 'carousel' %}
                        class="js-carousel slick-carousel row gx-{{ section.settings.space_between }}"
                        data-nav="{{ nav }}"
                        data-infinite="{{ infinite }}"
                        data-autoplay="{{ autoplay }}"
                        data-autoplayspeed="{{ autoplay_speed }}"
                        data-columnone="{{ owlColumn1 }}" 
                        data-columntwo="{{ owlColumn2 }}" 
                        data-columnthree="{{ owlColumn3 }}"
                    {% else %}
                        class="row g-{{ section.settings.space_between }} row-cols-{{ owlColumn3 }} row-cols-md-{{ owlColumn2 }} row-cols-lg-{{ owlColumn1 }}"
                        {% if section.settings.layout == 'masonry' %} 
                            data-masonry='{ "itemSelector": ".gallery__item" }'
                        {% endif %}
                    {% endif %}
                >
                    {% for block in section.blocks %}
                        <div class="gallery__item {% if section.settings.layout == 'carousel'  %}slick-carousel__item{% else %}col{% endif %}">
                            <a class="overflow-hidden d-block position-relative gallery__wrapper rounded-2" target="_blank" href="{% if section.settings.popup %}{{ block.settings.image | img_url: 'master' }}{% else%}{{ block.settings.link }}{% endif %}" style="{{- bg-color-overlay -}}">
                                {%- if block.settings.image != blank -%}
                                    {% render 'img-global' with image: block.settings.image, image_ratio: section.settings.image_ratio, crop: image_crop %}
                                {%- else -%}
                                    {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                                {%- endif -%}
                                {% if block.settings.title != blank or block.settings.desc != blank %}
                                    <div class="gallery__content position-absolute start-0 end-0 bottom-0 z-index-1">
                                        {%- if block.settings.title != blank -%}
                                            <h4 class="gallery__title text-white">{{ block.settings.title }}</h4>
                                        {%- endif -%}
                                        {% if block.settings.desc != blank  %}
                                            <div class="gallery__desc text-white mt-1 fs-13 fw-medium">{{ block.settings.desc }}</div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </a>
                        </div>
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</div>
