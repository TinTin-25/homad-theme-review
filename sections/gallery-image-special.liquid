{{- 'gallery-special.css' | asset_url | stylesheet_tag -}}
{%- include 'section_style' -%}
{%- assign image_crop = nil -%}
{%- if section.settings.crop -%}
    {%- assign image_crop = 'center' -%}
{%- endif -%}

<div class="gallery-special vela-section overflow-hidden{% if section.settings.full_with and section.settings.max_with %} mx-auto{% endif %}" style="{{- section_style -}}">
    <div class="container{% if section.settings.full_with %}-full{% endif %}">
        <div class="vela-section__inner">
            <div class="vela-section__content{% if section.settings.popup %} gallery-image{% endif %}">
                <div class="row g-0">
                    <div class="col-12 col-fix">
                        <div class="px-gutter" style="--bs-gutter-x: 1rem;--bs-gutter-y: 1rem;">
                            <div class="row row-cols-2" style="--bs-gutter-x: 1rem;--bs-gutter-y: 1rem;">
                                {% for block in section.blocks %}
                                    {%- if forloop.index > 4 -%}{% break %}{%- endif -%}
                                    <div class="col gallery___item">
                                        <a class="overflow-hidden overflow-hidden rounded-2{% unless section.settings.popup %} img-link{% endunless %}" target="_blank" href="{% if section.settings.popup %}{{ block.settings.image | img_url: 'master' }}{% else%}{{ block.settings.link }}{% endif %}">
                                            {%- if block.settings.image != blank -%}
                                                {% render 'img-global', image: block.settings.image, image_ratio: section.settings.image_ratio, crop: image_crop %}
                                            {%- else -%}
                                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                            {%- endif -%}
                                            {%- unless section.settings.popup -%}
                                                {% render 'icons', class: 'icon', icon: 'instagram' %}
                                            {%- endunless -%}
                                        </a>
                                    </div>
                                {%- endfor -%}
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-fix-lg">
                        <div class="group position-relative h-100 bg-primary px-2 py-5 py-lg-2 overflow-hidden rounded-2">
                            <div class="position-relative start-50 top-50 translate-middle text-center" style="max-width: 360px;">
                                {%- if section.settings.caption != blank -%}
                                    <p class="text-white fs-13 fw-medium mb-2">{% render 'icons', icon: 'instagram', attr: 'width="24px" height="24px"', class: "me-1" %}{{ section.settings.caption }}</p>
                                {%- endif -%}
                                {%- if section.settings.heading != blank -%}
                                    <h2 class="heading mb-3 pb-md-1 text-white">
                                        <span>{{ section.settings.heading }}</span>
                                    </h2>
                                {%- endif -%}
                                {%- if section.settings.sub_heading != blank -%}
                                    <div class="sub-heading text-white mb-5 pb-md-1">
                                        {{ section.settings.sub_heading }}
                                    </div>
                                {%- endif -%}
                                {%- if section.settings.button_text != blank -%}
                                    <a class="d-inline-block btn-outline btn" href="{{ section.settings.button_url }}" style="--btn-ol-cl: #fff;--btn-ol-bd-cl: #fff;--btn-ol-cl-h: #b5b5b5;--btn-ol-bd-cl-h: #b5b5b5;">{{ section.settings.button_text }}</a>
                                {%- endif-%}

                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-fix">
                        <div class="px-gutter" style="--bs-gutter-x: 1rem;--bs-gutter-y: 1rem;">
                            <div class="row row-cols-2" style="--bs-gutter-x: 1rem;--bs-gutter-y: 1rem;">
                                {% for block in section.blocks %}
                                    {%- if forloop.index > 4 -%}
                                        <div class="col gallery___item">
                                            <a class="overflow-hidden rounded-2{% unless section.settings.popup %} img-link{% endunless %}" target="_blank" href="{% if section.settings.popup %}{{ block.settings.image | img_url: 'master' }}{% else%}{{ block.settings.link }}{% endif %}">
                                                {%- if block.settings.image != blank -%}
                                                    {% render 'img-global', image: block.settings.image, image_ratio: section.settings.image_ratio, crop: image_crop %}
                                                {%- else -%}
                                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                                {%- endif -%}
                                                {%- unless section.settings.popup -%}
                                                    {% render 'icons', class: 'icon', icon: 'instagram' %}
                                                {%- endunless -%}
                                            </a>
                                        </div>
                                    {%- endif -%}
                                {%- endfor -%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Gallery Image special",
        "tag": "section",
        "class": "velaFramework",
        "disabled_on": {
            "groups": ["header", "footer"]
        },
        "settings": [
            {
                "type": "header",
                "content": "t:sections.global.settings.header_section.content"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "t:sections.global.settings.full_width.label"
            },
            {
                "type": "text",
                "id": "max_with",
                "label": "t:sections.global.settings.max_with.label",
                "info": "t:sections.global.settings.max_with.info"
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "t:sections.global.settings.bg_color.label",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "t:sections.global.settings.padding.label",
                "placeholder": "0px 0px",
                "info": "t:sections.global.settings.padding.info"
            },
            {
                "type": "text",
                "id": "padding_block_m",
                "label": "t:sections.global.settings.padding_mobile.label",
                "placeholder": "0px 0px",
                "info": "t:sections.global.settings.padding_mobile.info"
            },
            {
                "type": "text",
                "id": "margin_block",
                "label": "t:sections.global.settings.margin.label",
                "placeholder": "0px 0px"
            },
            {
                "type": "header",
                "content": "t:sections.global.settings.header_settings.content"
            },
            {
                "type": "html",
                "id": "caption",
                "label": "Caption",
                "default": "For Women"
            },
            {
                "type": "html",
                "id": "heading",
                "label": "t:sections.global.settings.heading_section.label",
                "default": "Follow us @Aceno"
            },
            {
                "type": "text",
                "id": "sub_heading",
                "label": "t:sections.global.settings.subheading_section.label",
                "default": "Sarah Flint shoes make sure that you feel both feminine and powerful, because to be one is to be the other. Show us how you #august today."
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button text",
                "default": "Follow now"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Url"
            },
            {
                "type": "header",
                "content": "Item settings"
            },
            {
                "type": "select",
                "id": "image_ratio",
                "options": [
                  {
                    "value": "adapt",
                    "label": "Adapt to image"
                  },
                  {
                    "value": "portrait",
                    "label": "Portrait"
                  },
                  {
                    "value": "square",
                    "label": "Square"
                  }
                ],
                "default": "adapt",
                "label": "Image ratio"
            },
            {
                "type": "checkbox",
                "id": "crop",
                "label": "Crop Image",
                "default": false,
                "info": "Not use with Adapt to image"
            },
            {
                "type": "checkbox",
                "id": "popup",
                "label": "Open image popup",
                "default": false
            },
            {
                "type": "select",
                "id": "space_between",
                "label": "Space between item",
                "default": "4",
                "options": [
                    {
                        "value": "0",
                        "label": "0"
                    },
                    {
                        "value": "2",
                        "label": "10px"
                    },
                    {
                        "value": "3",
                        "label": "20px"
                    },
                    {
                        "value": "4",
                        "label": "30px"
                    },
                    {
                        "value": "5",
                        "label": "40px"
                    }
                ]
            }
        ],
        "blocks": [
            {
                "type": "item",
                "name": "Image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image",
                        "info": "Recommended size banner 600x600, 800x800"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "URL"
                    }
                ]
            }
        ],
		"presets": [
            {
                "name": "Gallery Image special",
                "blocks": [
