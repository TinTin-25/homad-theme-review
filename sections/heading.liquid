                        "label": "Color",
                        "default": "#1F1F27"
                    },
                    {
						"type": "header",
						"content": "Config for desktop"
					},
					{
						"type": "range",
						"id": "text_font_size_desktop",
						"min": 10,
						"max": 100,
						"step": 1,
						"unit": "px",
						"label": "Font size",
