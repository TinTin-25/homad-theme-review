                            {
                                "value": "start",
                                "label": "Left"
                            },
                            {
                                "value": "center",
                                "label": "Center"
                            },
                            {
                                "value": "end",
                                "label": "Right"
                            }
                        ]
                    },
					{
						"type": "select",
						"id": "text_style",
						"label": "Font family",
