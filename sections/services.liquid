{{- 'ourservice.css' | asset_url | stylesheet_tag -}}
{%- include 'section_style' -%}
{% include 'carousel-settings' %}

{%- liquid
  assign icon_size = 32
  if section.settings.iconsize != blank
    assign icon_size = section.settings.iconsize | plus: 0
  endif
-%}
<div class="vela-section section-services overflow-hidden{% if section.settings.full_with and section.settings.max_with %} mx-auto{% endif %}" style="{{- section_style -}}">
    <div class="container{%- if section.settings.full_with -%}-fluid{%- endif -%}">
        <div class="vela-section__inner">
            {%- if section.settings.heading != blank -%}
                <div class="heading-group mb-3 mb-md-4 pb-1 {{ section.settings.text_align }}">
                    <h2 class="heading mb-0">
                        <span>{{ section.settings.heading }}</span>
                    </h2>
                    {%- if section.settings.sub_heading != blank -%}
                        <div class="sub-heading pt-1">
                            {{ section.settings.sub_heading }}
                        </div>
                    {%- endif -%}
                </div>
            {%- endif -%}
            <div class="vela-section__content services__{{ section.settings.service_style }}">
                <div
                    {% if section.settings.layout == 'carousel' %} 
                        class="js-carousel carousel-custom slick-carousel row g-3 g-md-4"
                        data-nav="{{ nav }}"
                        data-dots="{{ pagination }}"
                        data-infinite="{{ infinite }}"
                        data-autoplay="{{ autoplay }}"
                        data-variableWidth="{{ variableWidth }}"
                        data-autoplayspeed="{{ autoplay_speed }}"
                        data-columnone="{{ owlColumn1 }}" 
                        data-columntwo="{{ owlColumn2 }}" 
                        data-columnthree="{{ owlColumn3 }}"
                    {% else %}
                        class="row g-3 g-md-4 row-cols-{{ owlColumn3 }} row-cols-md-{{ owlColumn2 }} row-cols-lg-{{ owlColumn1 }}"
                    {% endif %}
                >
                    {% for block in section.blocks %}
                        <div class="services__item {% if section.settings.layout == 'carousel' %}slick-carousel__item{% else %}col{% endif %}">
                            {%- if section.settings.service_style == 'default' -%}
                                <div class="services-box d-flex justify-content-center rounded-2">
                                    <div class="d-flex">
                                        {%- if block.settings.icon != blank -%}
                                            <div class="services-box__image oveflow-hidden rounded-1 me-2">
                                                {%- render 'img-global', image: block.settings.icon, max_width: icon_size, image_style: true, img_fix_w: true -%}
                                            </div>
                                        {%- endif -%}
                                        <div class="services-box__content">
                                            {%- if block.settings.box_title != blank -%}
                                                <div class="services-title mb-1 fw-semibold" style="--sv-h-cl: {{block.settings.heading_color }};--sv-h-fs: {{block.settings.box_title_size }}px;--sv-h-fs-m: {{block.settings.box_title_size_m }}px;">{{ block.settings.box_title }}</div>
                                            {%- endif -%}
                                            {%- if block.settings.box_desc != blank -%}
                                                <div class="services-desc mx-auto" style="--sv-desc-cl: {{block.settings.desc_color }};--sv-desc-fs: {{block.settings.box_desc_size }}px;--sv-desc-fs-m: {{block.settings.box_desc_size_m }}px;">
                                                    {{ block.settings.box_desc }}
                                                </div>
                                            {%- endif -%}
                                            {%- if block.settings.button_text != blank -%}
                                                <a class="services-btn d-inline-block lh-1 position-relative mt-md-3" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
                                            {%- endif -%}
                                        </div>
                                    </div>
                                </div>
                            {%- elsif section.settings.service_style == 'style1' -%}
                                <div class="services-box text-center">
                                    {%- if block.settings.icon != blank -%}
                                        <div class="services-box__image mb-2 pb-1">
                                            {%- render 'img-global', image_class: 'mx-auto', image: block.settings.icon, max_width: icon_size, image_style: true, img_fix_w: true -%}
                                        </div>
                                    {%- endif -%}
                                    <div class="services-box__content">
                                        {%- if block.settings.box_title != blank -%}
                                            <div class="services-title mb-1 fw-medium" style="--sv-h-cl: {{block.settings.heading_color }};--sv-h-fs: {{block.settings.box_title_size }}px;--sv-h-fs-m: {{block.settings.box_title_size_m }}px;">{{ block.settings.box_title }}</div>
                                        {%- endif -%}
                                        {%- if block.settings.box_desc != blank -%}
                                            <div class="services-desc mx-auto" style="--sv-desc-cl: {{block.settings.desc_color }};--sv-desc-fs: {{block.settings.box_desc_size }}px;--sv-desc-fs-m: {{block.settings.box_desc_size_m }}px;">
                                                {{ block.settings.box_desc }}
                                            </div>
                                        {%- endif -%}
                                        {%- if block.settings.button_text != blank -%}
                                            <a class="services-btn d-inline-block lh-1 position-relative mt-md-3" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
                                        {%- endif -%}
                                    </div>
                                </div>
                            {%- else -%}
                                <div class="services-box text-center">
                                    {%- if block.settings.icon != blank -%}
                                        <div class="services-box__image mb-2">
                                            {%- render 'img-global', image_class: 'mx-auto', image: block.settings.icon, max_width: icon_size, image_style: true, img_fix_w: true -%}

                                        </div>
                                    {%- endif -%}
                                    <div class="services-box__content">
                                        {%- if block.settings.box_title != blank -%}
                                            <h6 class="services-title mb-1" style="--sv-h-cl: {{block.settings.heading_color }};--sv-h-fs: {{block.settings.box_title_size }}px;--sv-h-fs-m: {{block.settings.box_title_size_m }}px;">{{ block.settings.box_title }}</h6>
                                        {%- endif -%}
                                        {%- if block.settings.box_desc != blank -%}
                                            <div class="services-desc mx-auto" style="--sv-desc-cl: {{block.settings.desc_color }};--sv-desc-fs: {{block.settings.box_desc_size }}px;--sv-desc-fs-m: {{block.settings.box_desc_size_m }}px;">
                                                {{ block.settings.box_desc }}
                                            </div>
                                        {%- endif -%}
                                        {%- if block.settings.button_text != blank -%}
                                            <a class="services-btn btn btn-default mt-3" href="{{ block.settings.button_url }}">{{ block.settings.button_text }}</a>
                                        {%- endif -%}
                                    </div>
                                </div>
                            {%- endif -%}
                            
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
