<article class="article blog__list">
    <div class="row g-0 gy-4 gy-lg-5">
        <div class="col-12 col-lg-5">
            <div class="article__image">
                <a class="article__featured-image-link d-block overflow-hidden rounded-2" href="{{ article.url }}">
                    {% render 'img-global', image: article.image, image_ratio: section.settings.image_ratio, crop: image_crop %}
                </a>
            </div>
        </div>   
        <div class="col-12 col-lg-7 ps-lg-3"> 
            <div class="article__content">
                {%- if show_tags and article.tags.size > 0 -%}
                    <div class="article__meta-tags d-flex flex-wrap mb-2">
                        {% for tag in article.tags limit: section.settings.blog_tags_limit %}
                            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tags__item">{{ tag }}</a>{% unless forloop.last %}<span class="lh-1 me-1">,</span>{% endunless %}
                        {% endfor %}
                    </div>
                {%- endif -%}
                
                <h3 class="article__title mb-2 line-clamp-2">
                    <a class="line-title" href="{{ article.url }}" title="{{ article.title | strip_html }}"><span>{{ article.title }}</span></a>
                </h3>
                {% if show_date or show_author %}
                    <div class="article__meta d-flex flex-wrap align-items-center mb-2 lh-1">
                        {%- if show_date -%}
                                <div class="article__meta-date mb-1">{{ article.published_at | time_tag: format: 'date_month_year' }}</div>
                        {%- endif -%}
                        {%- if show_author -%}
                            {%- capture author -%}{{ article.author }}{%- endcapture -%}
                            <div class="article__meta-author d-flex align-items-center mb-1">
                                {{ 'blogs.article.author_html' | t: author: author }}
                            </div>
                        {%- endif -%}
                    </div>
                {%- endif -%}
                {%- if show_excerpt -%}
                    <div class="rte article__excerpt pt-1 line-clamp-3">
                        {{ article_content | strip_html }}
                    </div>
                {%- endif -%}
                {%- if show_readmore -%}
                    <div class="d-flex pt-2">
                        <a class="article__btn vela-icon" href="{{ article.url }}"><span class="d-inline-block">{{ 'blogs.article.read_more' | t }}</span>{% render 'icons', icon: 'arrow-right-top', class: 'icon-arrow-right-top ms-2 position-relative', attr: 'width="9" height="9"' %}</a>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</article>