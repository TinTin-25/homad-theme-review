{%- if product_style == 'list' -%}
	{%- assign anumber = number | default: 4 -%}
	{%- for i in (1..anumber) -%}
		<div class=" {% if strGridItem %}{{ strGridItem }}{% else %}slick-carousel__item{% endif %}">
			<div class="row g-3 g-lg-4 product-card product-grid grid__style3 product-deal-list">
				<div class="col-12 col-sm-5">
					<div class="product-card__image-wrapper">
						<a class="product-card__image-link border" href="/admin/products">
							{%- capture current -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
							{{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
						</a>
						<div class="product-card__label position-absolute d-flex flex-column {{ settings.badge_position }}-0">
							{%- if settings.product_card_new -%}
								<span class="d-flex justify-content-start"><span class="label-new d-block overflow-hidden py-1 px-2 rounded-pill mb-0">{{ 'products.general.label_new' | t }}</span></span>
							{%- endif -%}
							{%- if forloop.index == 2 and settings.product_card_sale -%}
								<span class="d-flex justify-content-start"><span class="label-on-sale d-block overflow-hidden py-1 px-2 rounded-pill mb-0">-10%</span></span>		
							{%- endif -%}
						</div>
						{%- if settings.product_card_addtocart -%}
							<div class="product-card__buttons w-100">
								<div class="product-card__form">
									{%- unless forloop.index == 4 -%}
										<a class="btn btn--add-to-cart rounded-0" href="/admin/products">
											{% render 'icons', icon: 'cart', class: 'icon-cart d-none', attr: 'width="18" height="18"' %}
											<span class="text">{{ 'products.product.add_to_cart' | t }}</span>
										</a>
									{%- endunless -%}
								</div>
							</div>
						{%- endif -%}
					</div>
				</div>
				<div class="col-12 col-sm-7">
					<div class="product-card__content position-relative">
						<div class="product-card__content--inner">
							{%- if settings.product_vendor_enable -%}
								<div class="product-card__vendor mb-1">{{ 'Hopkins' | link_to_vendor }}</div>
							{%- endif -%}
							<h6 class="product-card__name line-clamp-2 mb-2 pb-1">
								<a class="line-title fw-normal" href="/admin/products">Sacrificial Chair Design</a>
							</h6>
							{%- if settings.product_reviews_enable and settings.product_card_review -%}
								<div class="product-card__review product-review mb-2 pb-1">
									<div class="d-flex py-1">
										{% render 'icons', icon: 'star', class: 'icon-star text-color-light', attr: 'width="14" height="14"' %}
										{% render 'icons', icon: 'star', class: 'icon-star text-color-light', attr: 'width="14" height="14"' %}
										{% render 'icons', icon: 'star', class: 'icon-star text-color-light', attr: 'width="14" height="14"' %}
										{% render 'icons', icon: 'star', class: 'icon-star text-color-light', attr: 'width="14" height="14"' %}
										{% render 'icons', icon: 'star', class: 'icon-star text-color-light', attr: 'width="14" height="14"' %}
									</div>
								</div>
							{%- endif -%}
							<div class="product-group-price d-flex align-items-center w-100">
								{%- if forloop.index == 2 -%}
									<div class="product-price product-price--regular me-1"><span class="money">$100.00</span></div>
								{%- endif -%}
								<div class="product-price{% if forloop.index == 2 %} product-price__has-sale{% endif %}">$90.00</div>
							</div>
							{%- if settings.product_card_available -%}
								<ul class="ps-3 mt-2 pb-1 mb-0">{% if forloop.index == 4 %}<li class="text-danger">{{ 'products.product.out_stock' | t }}</li>{% else %}<li class="text-success">{{ 'products.product.in_stock' | t }}</li>{% endif %}</ul>
							{%- endif -%}
							{%- if section.settings.countdown -%} 
								{% assign date_now = 'now' | date: '%s' %}
								{% assign   endate = date_now | plus: 2592000 %}
								{% assign countdownTime = endate | date: '%Y/%m/%d' %}
								<div class="countdown-group mt-2">
									<h6 class="countdown-title">{{ 'general.countdown.title' | t }}</h6>
									<div class="product-card__countdown countdown" data-countdown="{{ countdownTime }}"></div>
								</div> 
							{%- endif -%}
							{%- if section.settings.product_inventory -%}
								{% if forloop.index == 4 %}
									<div class="product-inventory mt-2">
										<div class="progress mb-1">
											<div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
										</div>
										<label class="text-color-light pb-1">{{ 'products.general.already_sold' | t}}: <span class="heading-color">100/100</span></label>
									</div>
								{% else %}
									<div class="product-inventory mt-2">
										<div class="progress mb-1">
											<div class="progress-bar bg-danger" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
										</div>
										<label class="text-color-light">{{ 'products.general.already_sold' | t}}: <span class="heading-color">30/100</span></label>
									</div>
								{% endif %}
							{%- endif -%}
						</div>
					</div>
				</div>
			</div>
		</div>
	{%- endfor -%}
