<div class="collection-header position-relative {% unless section.settings.sidebar_template == 'sidebarnone' %}flex-lg-nowrap{% endunless %} mb-3 mb-md-4">
	<div class="collection-header__top d-flex align-items-center justify-content-between flex-wrap">
		{%- if section.blocks.size > 0 -%}
			{%- if section.settings.sidebar_template == 'sidebarnone' -%}
				{%- assign product_count_display = "d-none d-md-block" -%}
			{%- elsif section.settings.sidebar_template == 'sidebarleft' or section.settings.sidebar_template == 'sidebarright' -%}
				{%- assign class_display = "d-block d-lg-none" -%}
				{%- assign product_count_display = "d-none d-md-block" -%}
			{%- elsif section.settings.sidebar_template == 'sidebartop' -%}
				{%- assign class_display = "d-none" -%}
			{%- endif -%}
		{%- else -%}
			{%- assign class_display = "d-none" -%}
		{%- endif -%}
		<div class="collection-filter {{ class_display }}">
			<button class="js-sidebar-toggle collection-filter__button d-flex align-items-center border-0" type="button">
				{% render 'icons', icon: 'filter', attr: 'width="18" height="18"' %}
				<span >{{ 'collections.filter.filter' | t }}</span>
			</button>
		</div>
		{%- if section.settings.sidebar_template == 'sidebartop' -%}
			{%- include 'product-filter-top' -%}
		{%- endif -%}
		{%- assign min_page = 1 -%}
		{%- assign max_page = paginate.page_size | times: paginate.current_page -%}
		{%- if paginate.current_page > 1 -%}
			{%- assign current_page = paginate.current_page | minus: 1 -%}
			{%- assign min_page = current_page | times: paginate.page_size -%}
			{%- assign min_page = min_page | plus: 1 -%}
		{%- endif -%}
		{%- if max_page > paginate.items -%}
			{%- assign max_page = paginate.items -%}
		{%- endif -%}
		<div id="ProductCount" class="collection-product-count {{ product_count_display }}" role="status">{% if section.settings.loadmore %}{{ 'collections.general.product_count_total' | t: items_page:paginate.items }}{% else %}{{ 'collections.general.product_count_html' | t: min_page:min_page, max_page:max_page, items_page:paginate.items }}{% endif %}</div>
		<facet-filters-form class="product-filter">
			<form id="FacetSortForm" class="product-filter__form">
				{%- if template.suffix != blank -%}
					<input type="hidden" name="view" value="{{ template.suffix }}" />
				{%- endif -%}
				<div class="collection-filters__field d-flex align-items-center">
					<label class="collection-filters__label me-2 d-flex text-secondary">{{ 'collections.sorting.title' | t }}:</label>
					<div class="collection-filters__dropdown d-flex align-items-center justify-content-between position-relative" data-bs-toggle="dropdown" aria-expanded="false">
						{%- for option in results.sort_options -%}
							{%- if option.value == sort_by -%}{{ option.name | escape }} {% break %}{%- endif -%}
						{%- endfor -%}
						<span class="btn-arrow">
							{%- render 'icons', icon: 'angle-down', attr: 'width="10" height="6"' -%}
						</span>
					</div>
					<ul class="dropdown-menu border-0 facets__list" id="SortBy" aria-describedby="a11y-refresh-page-message" >
						{%- for option in results.sort_options -%}
							<li class="facets__item px-3 py-1 {% if option.value == sort_by %} selected{% endif %}">
								<label for="{{ option.value | escape }}">
									<input class="d-none" type="radio" id="{{ option.value | escape }}" name="sort_by" value="{{ option.value | escape }}" {% if option.value == sort_by %} checked{% endif %}>
									<span>{{ option.name | escape }}</span>
								</label>
							</li>
						{%- endfor -%}
					</ul>
				</div>
			</form>
		</facet-filters-form>
	</div>
	<div class="active-facets mt-1">
		{%- for filter in results.filters -%}
			{%- for value in filter.active_values -%}
				<facet-remove>
					<a class="active-facets__button js-facet-remove" href="{{ value.url_to_remove }}">
						{{ value.label | escape }}
						<span class="vela__btn-close position-relative ms-1 d-block">
							<svg width="10" height="10" class="icon-line position-absolute top-50 start-50" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
							<svg width="10" height="10" class="icon-line1 position-absolute top-50 start-50" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
						</span>
					</a>
				</facet-remove>
			{%- endfor -%}
			{% if filter.type == "price_range" %}
				{%- if filter.min_value.value != nil or filter.max_value.value != nil -%}
				<facet-remove>
					<a class="active-facets__button js-facet-remove" href="{{ filter.url_to_remove }}" title="{{ 'collections.filter.clear' | t }}">
						{%- if filter.min_value.value -%}{{ filter.min_value.value | money }}{%- else -%}{{ 0 | money }}{%- endif -%}-{%- if filter.max_value.value -%}{{ filter.max_value.value | money }}{%- else -%}{{ filter.range_max | money }}{%- endif -%}
						<span class="vela__btn-close position-relative ms-1 d-block">
							<svg width="10" height="10" class="icon-line position-absolute top-50 start-50" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
							<svg width="10" height="10" class="icon-line1 position-absolute top-50 start-50" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
						</span>
					</a>
				</facet-remove>
				{%- endif -%}
			{% endif %}
		{%- endfor -%}
		<facet-remove>
			<a href="{{ results_url }}&{{ layoutview }}" class="active-facets__button active-facets__clear_all js-facet-remove" title="{{ 'collections.filter.clear_all' | t }}">
				{{ 'collections.filter.clear_all' | t }}
				<span class="vela__btn-close position-relative ms-1 d-block">
					<svg width="10" height="10" class="icon-line position-absolute top-50 start-50" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
					<svg width="10" height="10" class="icon-line1 position-absolute top-50 start-50" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9 1L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
				</span>
			</a>
		</facet-remove>
	</div>
</div>
