
{%- if block.settings.contactinfo_logo != blank or block.settings.contactinfo_logo_svg != blank -%}
	<div class="footer-info--logo mb-2 mb-md-3 pb-lg-1">
	{%- assign mw_logo = block.settings.logo_footer_width | append: 'px' -%}
		<a class="d-flex" href="/" itemprop="url" style="max-width: {{ mw_logo }};">
			{%- if block.settings.contactinfo_logo != blank -%}
					{%- assign image_footer_size = block.settings.logo_footer_width | append: 'x' -%}
					{%- assign footer_size_rentina = block.settings.logo_footer_width | times: 2 -%}
					<img {% unless block.settings.contactinfo_logo.width < footer_size_rentina %}srcset="{{ block.settings.contactinfo_logo | image_url: width: block.settings.logo_footer_width }} 1x, {{ block.settings.contactinfo_logo | image_url: width: block.settings.logo_footer_width, scale: 2 }} 2x" {% endunless %}
					src="{{ block.settings.contactinfo_logo | image_url: width: block.settings.logo_footer_width }}"
					loading="lazy"
					width="{{ block.settings.logo_footer_width }}"
					heigth="auto"
					class="img-fluid"
					alt="{{ block.settings.logo.alt | default: shop.name | escape }}" >
			{%- endif -%}
		</a>
	</div>
{%- endif -%}
{% if contactinfoDesc != blank %}
	<div class="footer-info--desc {% if contactinfoAdd != blank %}{% endif %}">{{ contactinfoDesc }}</div>
{% endif %}
{% if contactinfoAdd != blank %}
	<div class="footer-info--address d-flex align-items-center mt-2">
		<i class="icons d-flex">
			{% render 'icons', icon: 'map-marker', attr: 'width="18" height="18"' %}
		</i>
		{{ contactinfoAdd }}
	</div>
{% endif %}	
{% if contactinfoPhone != blank %}
	<div class="footer-info--phone d-flex align-items-center mt-2">
		<i class="icons d-flex">
			{% render 'icons', icon: 'call-in', attr: 'width="18" height="18"' %}
		</i>
		{{ contactinfoPhone }}
	</div>
{% endif %}	
{% if contactinfoEmail != blank %}
	<div class="footer-info--email d-flex align-items-center mt-2">
		<i class="icons d-flex">
			{% render 'icons', icon: 'envolope-letter', attr: 'width="18" height="18"' %}
		</i>
		<div>{{ contactinfoEmail }}</div>
	</div>
{% endif %}	
{% if contactinfoTime != blank %}
	<div class="footer-info--time d-flex align-items-center mt-2">
		<i class="icons d-flex">
			{% render 'icons', icon: 'calender', attr: 'width="18" height="18"' %}
		</i>
		{{ contactinfoTime }}
	</div>
{% endif %}
